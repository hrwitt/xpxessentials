<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/exploreLayout">

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gdlTitleTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.08"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textSize="36dp"
            android:text="Explore The Esssentials"
            android:textStyle="bold"
            android:id="@+id/txtExplore"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/gdlTitleTop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="36dp"
        android:text="By"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/gdlExpBtnLeft"
        app:layout_constraintRight_toRightOf="@id/gdlExpBtnRight"
        app:layout_constraintTop_toBottomOf="@id/txtExplore"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gdlExpBtnLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.20"
    />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gdlExpBtnRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.80"
    />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gdlExpBtnTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.28"
    />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gdlExpBtnBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.82"
    />

    <ImageButton
        android:id="@+id/btnPosition"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/position_button"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/gdlExpBtnLeft"
        app:layout_constraintRight_toRightOf="@id/gdlExpBtnRight"
        app:layout_constraintTop_toTopOf="@id/gdlExpBtnTop" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/interest_button"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:id="@+id/btnInterests"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="@id/gdlExpBtnLeft"
        app:layout_constraintRight_toRightOf="@id/gdlExpBtnRight"
        app:layout_constraintTop_toBottomOf="@id/btnPosition"/>

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/goals_button"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:id="@+id/btnGoals"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="@id/gdlExpBtnLeft"
        app:layout_constraintRight_toRightOf="@id/gdlExpBtnRight"
        app:layout_constraintTop_toBottomOf="@id/btnInterests"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="36dp"
        android:text="Or"
        android:textStyle="bold"
        android:id="@+id/txtOr"
        app:layout_constraintLeft_toLeftOf="@id/gdlExpBtnLeft"
        app:layout_constraintRight_toRightOf="@id/gdlExpBtnRight"
        app:layout_constraintTop_toBottomOf="@id/btnGoals"/>

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/view_all_button"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:id="@+id/btnViewAll"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="@id/gdlExpBtnLeft"
        app:layout_constraintRight_toRightOf="@id/gdlExpBtnRight"
        app:layout_constraintTop_toBottomOf="@id/txtOr"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/exploreBtnLayout"
            app:layout_constraintLeft_toLeftOf="@id/gdlExpBtnLeft"
            app:layout_constraintRight_toRightOf="@id/gdlExpBtnRight"
            app:layout_constraintTop_toTopOf="@id/gdlExpBtnTop"
            app:layout_constraintBottom_toBottomOf="@id/gdlExpBtnBottom">

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>